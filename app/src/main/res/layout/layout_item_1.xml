<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_letter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/avatar"
        android:gravity="center"
        android:text="A"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_letter"
        android:text="Hello World"
        android:textSize="24sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_letter"
        android:layout_toLeftOf="@id/image_favorite"
        android:layout_below="@id/text_name"
        android:singleLine="true"
        android:text="Hello World Hello World Hello World Hello World "
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_letter"
        android:layout_toLeftOf="@id/image_favorite"
        android:layout_below="@id/text_subject"
        android:singleLine="true"
        android:text="Hello World Hello World Hello World Hello World"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="12:00 PM"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_star_border"/>
</RelativeLayout>